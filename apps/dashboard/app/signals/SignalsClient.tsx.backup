'use client';

import { useState } from 'react';

interface Signal {
  id: number;
  league?: string;
  home_team: string;
  away_team: string;
  player_name?: string;
  game_time?: string;
  market_name: string;
  selection?: string;
  line_value?: number;
  odds_american: number;
  fair_probability: number;
  edge_percent: number;
  recommended_stake_pct: number;
  confidence_level: string;
  sportsbook: string;
}

interface SignalsClientProps {
  signals: Signal[];
  filters: {
    league?: string;
    market?: string;
    minEdge?: number;
  };
}

type SortField = 'edge' | 'time' | 'odds' | 'stake';
type SortDirection = 'asc' | 'desc';

export default function SignalsClient({ signals, filters }: SignalsClientProps) {
  const [activeTab, setActiveTab] = useState<'all' | 'nfl' | 'nba' | 'nhl'>('all');
  const [sortField, setSortField] = useState<SortField>('edge');
  const [sortDirection, setSortDirection] = useState<SortDirection>('desc');

  const getEdgeClass = (edge: number) => {
    if (edge >= 5) return 'edge-excellent';
    if (edge >= 3) return 'edge-good';
    if (edge >= 2) return 'edge-fair';
    return 'edge-low';
  };

  const formatTime = (dateStr: string) => {
    const date = new Date(dateStr);
    const now = new Date();
    const diffMs = date.getTime() - now.getTime();
    const diffHours = Math.floor(diffMs / (1000 * 60 * 60));

    if (diffHours < 24) {
      return `${diffHours}h`;
    }
    const diffDays = Math.floor(diffHours / 24);
    return `${diffDays}d`;
  };

  const nflCount = signals.filter(s => s.league?.includes('football')).length;
  const nbaCount = signals.filter(s => s.league?.includes('basketball')).length;
  const nhlCount = signals.filter(s => s.league?.includes('hockey')).length;

  // Filter by tab
  const filteredSignals = signals.filter(s => {
    if (activeTab === 'all') return true;
    if (activeTab === 'nfl') return s.league?.includes('football');
    if (activeTab === 'nba') return s.league?.includes('basketball');
    if (activeTab === 'nhl') return s.league?.includes('hockey');
    return true;
  });

  // Sort signals
  const sortedSignals = [...filteredSignals].sort((a, b) => {
    let comparison = 0;

    switch (sortField) {
      case 'edge':
        comparison = a.edge_percent - b.edge_percent;
        break;
      case 'time':
        comparison = new Date(a.game_time || 0).getTime() - new Date(b.game_time || 0).getTime();
        break;
      case 'odds':
        comparison = a.odds_american - b.odds_american;
        break;
      case 'stake':
        comparison = a.recommended_stake_pct - b.recommended_stake_pct;
        break;
    }

    return sortDirection === 'asc' ? comparison : -comparison;
  });

  const handleSort = (field: SortField) => {
    if (sortField === field) {
      setSortDirection(sortDirection === 'asc' ? 'desc' : 'asc');
    } else {
      setSortField(field);
      setSortDirection('desc');
    }
  };

  return (
    <main className="container">
      {/* Header */}
      <header className="header">
        <div className="header-content">
          <div className="terminal-dots">
            <span className="dot red"></span>
            <span className="dot yellow"></span>
            <span className="dot green"></span>
          </div>
          <div className="header-text">
            <h1>
              <span className="accent">&gt;</span> SportsEdge
              <span className="blink">_</span>
            </h1>
            <p className="subtitle mono">Active Betting Signals · {signals.length} opportunities detected</p>
          </div>
        </div>

        {/* Sport Tabs */}
        <div className="tabs">
          <button
            className={`tab ${activeTab === 'all' ? 'active' : ''}`}
            onClick={() => setActiveTab('all')}
          >
            <span className="tab-label">ALL</span>
            <span className="tab-count">{signals.length}</span>
          </button>
          <button
            className={`tab ${activeTab === 'nfl' ? 'active' : ''}`}
            onClick={() => setActiveTab('nfl')}
          >
            <span className="tab-label">NFL</span>
            <span className="tab-count">{nflCount}</span>
          </button>
          <button
            className={`tab ${activeTab === 'nba' ? 'active' : ''}`}
            onClick={() => setActiveTab('nba')}
          >
            <span className="tab-label">NBA</span>
            <span className="tab-count">{nbaCount}</span>
          </button>
          <button
            className={`tab ${activeTab === 'nhl' ? 'active' : ''}`}
            onClick={() => setActiveTab('nhl')}
          >
            <span className="tab-label">NHL</span>
            <span className="tab-count">{nhlCount}</span>
          </button>
        </div>
      </header>

      {/* Signals Grid */}
      <div className="signals-grid">
        {signals.length === 0 ? (
          <div className="empty-state">
            <div className="terminal-output mono">
              <p><span className="accent">&gt;</span> No signals detected</p>
              <p>  Waiting for opportunities with edge ≥{filters.minEdge || 2}%...</p>
              <p>  Run: <span style={{ color: 'var(--accent)' }}>make signals</span></p>
            </div>
          </div>
        ) : (
          signals.map((signal) => {
            const matchup = signal.player_name
              ? `${signal.player_name} (${signal.home_team} vs ${signal.away_team})`
              : `${signal.home_team} vs ${signal.away_team}`;

            const gameTime = signal.game_time || new Date().toISOString();

            return (
              <div key={signal.id} className="signal-card animate-slide-down">
                <div className="card-header">
                  <div className="game-info">
                    <span className="league-tag mono">{signal.league?.toUpperCase() || 'UNKNOWN'}</span>
                    <span className="time-tag mono">
                      <span style={{ color: 'var(--accent)' }}>⏱</span> {formatTime(gameTime)}
                    </span>
                  </div>
                  <div className={`edge-badge ${getEdgeClass(signal.edge_percent)}`}>
                    <span className="edge-value">{signal.edge_percent.toFixed(1)}%</span>
                    <span className="edge-label mono">EDGE</span>
                  </div>
                </div>

                <div className="card-body">
                  <div className="matchup">
                    <div className="matchup-text">{matchup}</div>
                  </div>

                  <div className="market-info">
                    <div className="market-row">
                      <span className="label mono">Market:</span>
                      <span className="value">{signal.market_name}</span>
                    </div>
                    <div className="market-row">
                      <span className="label mono">Selection:</span>
                      <span className="value accent">{signal.selection || '-'}</span>
                    </div>
                    <div className="market-row">
                      <span className="label mono">Line:</span>
                      <span className="value mono">{signal.line_value ? signal.line_value.toFixed(1) : 'N/A'}</span>
                    </div>
                  </div>

                  <div className="odds-section">
                    <div className="odds-row">
                      <div className="odds-item">
                        <span className="odds-label mono">Book Odds</span>
                        <span className="odds-value">{signal.odds_american > 0 ? '+' : ''}{signal.odds_american}</span>
                      </div>
                      <div className="odds-item">
                        <span className="odds-label mono">Fair Prob</span>
                        <span className="odds-value">{(signal.fair_probability * 100).toFixed(1)}%</span>
                      </div>
                      <div className="odds-item">
                        <span className="odds-label mono">Confidence</span>
                        <span className={`confidence-badge ${signal.confidence_level}`}>{signal.confidence_level}</span>
                      </div>
                    </div>
                  </div>

                  <div className="recommendation">
                    <div className="rec-row">
                      <span className="rec-label mono">Recommended Stake:</span>
                      <span className="rec-value accent">{signal.recommended_stake_pct.toFixed(2)}%</span>
                    </div>
                    <div className="rec-row">
                      <span className="rec-label mono">Sportsbook:</span>
                      <span className="rec-value">{signal.sportsbook}</span>
                    </div>
                  </div>
                </div>

                <div className="card-footer">
                  <div className="status-indicator">
                    <span className="pulse-dot"></span>
                    <span className="status-text mono">ACTIVE</span>
                  </div>
                  <div className="signal-id mono">ID: {signal.id}</div>
                </div>
              </div>
            );
          })
        )}
      </div>

      <style jsx>{`
