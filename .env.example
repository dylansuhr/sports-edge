# Example environment configuration (NO REAL SECRETS)
# Copy to .env and fill in actual values

# === Database ===
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_READONLY_URL=postgresql://READONLY_USER:PASSWORD@HOST:PORT/DBNAME

# Database connection options (appended to URLs)
DB_CONN_OPTS=sslmode=require&connect_timeout=5

# === API Mode (No CSV) ===
USE_API=true
DATA_PROVIDER=theoddsapi

# === API Keys ===
THE_ODDS_API_KEY=your_odds_api_key_here

# === Leagues & Markets ===
LEAGUES=nfl

# === Signal Generation ===
SIGNAL_LOOKAHEAD_HOURS=168

# === Edge Thresholds ===
EDGE_SIDES=0.02
EDGE_PROPS=0.03

# === Bankroll Management ===
KELLY_FRACTION=0.25
MAX_STAKE_PCT=0.01
BANKROLL=1000.0

# === Sportsbook Adapters (optional, ToS-compliant only) ===
ENABLE_DK=false
ENABLE_CAESARS=false

# === Dashboard ===
NEXT_PUBLIC_APP_NAME=sports-edge

# === Webhooks (optional) ===
SLACK_WEBHOOK_URL=
